AC_PREREQ(2.59)
AC_INIT(dax/opendax.c)
AC_CONFIG_AUX_DIR(config)
AM_CONFIG_HEADER(config.h)

VERSION="0.1"
PACKAGE=opendax

AM_INIT_AUTOMAKE($PACKAGE, $VERSION)

AC_PROG_CC
AC_PROG_RANLIB

# Checks for libraries.
AC_CHECK_LIB([pthread], [pthread_create])
AC_CHECK_LIB([readline], [readline])

# Checks for header files.
AC_HEADER_STDC
AC_HEADER_SYS_WAIT
AC_CHECK_HEADERS([arpa/inet.h fcntl.h netinet/in.h stdlib.h string.h sys/ioctl.h sys/param.h sys/time.h syslog.h termios.h unistd.h readline/readline.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_C_INLINE
AC_TYPE_PID_T
AC_TYPE_SIZE_T
AC_HEADER_TIME

# Checks for library functions.
AC_FUNC_FORK
AC_FUNC_MALLOC
AC_FUNC_REALLOC
AC_TYPE_SIGNAL
AC_FUNC_VPRINTF
AC_CHECK_FUNCS([dup2 gettimeofday memmove memset socket strcasecmp strdup strerror strpbrk strtol strtoul])

CFLAGS="-Wall -g"

AC_SUBST(ac_aux_dir)

AC_CONFIG_FILES([Makefile
                 dax/Makefile
                 lib/Makefile
                 modules/Makefile
                 modules/modbus/Makefile
                 modules/daxc/Makefile
                 modules/test/Makefile])
AC_OUTPUT
